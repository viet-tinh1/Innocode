<script>
    document.addEventListener("scroll", function () {
        var sidebar = document.querySelector(".sidebar1");
        var headerHeight = 350; // Chiều cao của header (điều chỉnh theo thiết kế của bạn)
        var scrollPosition = window.scrollY + window.innerHeight / 2; // Vị trí cuộn hiện tại + một nửa chiều cao của màn hình

        // Nếu vị trí cuộn lớn hơn headerHeight, cố định .sidebar1
